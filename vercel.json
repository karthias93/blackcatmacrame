{
  "version": 2,
  "builds": [
    { "src": "backend/server.js", "use": "@vercel/node" },
    { "src": "frontend/public/**", "use": "@vercel/static-build" },
    { "src": "frontend/src/**/*.{js,jsx,ts,tsx}", "use": "@vercel/static-build" }
  ],
  "routes": [
    { "src": "/", "dest": "/backend/server.js" }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}