{
    "version": 2,
    "builds": [
      { "src": "backend/server.js", "use": "@vercel/node" }
    ],
    "routes": [
      { "src": "/", "dest": "/backend/server.js" }
    ],
    "env": {
      "NODE_ENV": "production"
    },
    "functions": {
        "heroku-postbuild": {
          "runtime": "vercel-node@0.5.0",
          "memory": 1024
        }
    }
  }